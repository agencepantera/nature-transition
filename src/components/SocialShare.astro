---
interface Props {
  url: string;
  title: string;
  description?: string;
}

const { url, title, description = '' } = Astro.props;
const encodedUrl = encodeURIComponent(url);
const encodedTitle = encodeURIComponent(title);
const encodedDescription = encodeURIComponent(description);
---

<div class="flex flex-col gap-4">
  <!-- X -->
  <a
    href={`https://x.com/intent/tweet?url=${encodedUrl}&text=${encodedTitle}`}
    target="_blank"
    rel="noopener noreferrer"
    class="flex items-center gap-3 px-4 py-2 rounded-lg bg-gray-100 hover:bg-gray-200 transition-all duration-300 group"
    aria-label="Partager sur X"
  >
    <svg class="w-5 h-5 text-gray-700 group-hover:text-black" fill="currentColor" viewBox="0 0 1200 1227">
      <path d="M714.163 519.284L1160.89 0H1055.03L667.137 450.887L357.328 0H0L468.492 681.821L0 1226.37H105.866L515.491 750.218L842.672 1226.37H1200L714.137 519.284H714.163ZM569.165 687.828L521.697 619.934L144.011 87.6944H306.615L611.412 515.685L658.88 583.579L1055.08 1143.69H892.476L569.165 687.854V687.828Z"/>
    </svg>
    <span class="text-sm text-gray-700 group-hover:text-black">Partager sur X</span>
  </a>

  <!-- LinkedIn -->
  <a
    href={`https://www.linkedin.com/shareArticle?mini=true&url=${encodedUrl}&title=${encodedTitle}&summary=${encodedDescription}`}
    target="_blank"
    rel="noopener noreferrer"
    class="flex items-center gap-3 px-4 py-2 rounded-lg bg-gray-100 hover:bg-blue-50 transition-all duration-300 group"
    aria-label="Partager sur LinkedIn"
  >
    <svg class="w-5 h-5 text-gray-700 group-hover:text-[#0A66C2]" fill="currentColor" viewBox="0 0 24 24">
      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
    </svg>
    <span class="text-sm text-gray-700 group-hover:text-[#0A66C2]">Partager sur LinkedIn</span>
  </a>

  <!-- Facebook -->
  <a
    href={`https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`}
    target="_blank"
    rel="noopener noreferrer"
    class="flex items-center gap-3 px-4 py-2 rounded-lg bg-gray-100 hover:bg-blue-50 transition-all duration-300 group"
    aria-label="Partager sur Facebook"
  >
    <svg class="w-5 h-5 text-gray-700 group-hover:text-[#1877F2]" fill="currentColor" viewBox="0 0 24 24">
      <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
    </svg>
    <span class="text-sm text-gray-700 group-hover:text-[#1877F2]">Partager sur Facebook</span>
  </a>

  <!-- Email -->
  <a
    href={`mailto:?subject=${encodedTitle}&body=${encodedDescription}%0A%0A${encodedUrl}`}
    class="flex items-center gap-3 px-4 py-2 rounded-lg bg-gray-100 hover:bg-green-50 transition-all duration-300 group"
    aria-label="Partager par email"
  >
    <svg class="w-5 h-5 text-gray-700 group-hover:text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
    </svg>
    <span class="text-sm text-gray-700 group-hover:text-green-600">Partager par email</span>
  </a>
</div>