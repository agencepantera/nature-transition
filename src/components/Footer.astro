---
import { navItems } from '../config/navigation';
import Logo from './Logo.astro';

const currentYear = new Date().getFullYear();

const footerLinks = {
  'À propos': [
    { href: '/a-propos', label: 'Notre mission' },
    { href: '/equipe', label: 'Notre équipe' },
    { href: '/contact', label: 'Contact' },
  ],
  'Ressources': [
    { href: '/articles', label: 'Articles' },
    { href: '/guides', label: 'Guides pratiques' },
    { href: '/newsletter', label: 'Newsletter' },
  ],
  'Légal': [
    { href: '/mentions-legales', label: 'Mentions légales' },
    { href: '/confidentialite', label: 'Politique de confidentialité' },
    { href: '/cookies', label: 'Gestion des cookies' },
  ],
};
---

<footer class="bg-white border-t border-gray-200">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Logo et description -->
      <div class="space-y-4">
        <Logo class="mb-4" />
        <p class="text-gray-600">
          Ensemble vers un avenir plus durable et respectueux de notre environnement.
        </p>
      </div>

      <!-- Liens -->
      {Object.entries(footerLinks).map(([title, links]) => (
        <div>
          <h3 class="font-bold text-gray-900 mb-4">{title}</h3>
          <ul class="space-y-2">
            {links.map(({ href, label }) => (
              <li>
                <a
                  href={href}
                  class="text-gray-600 hover:text-primary-dark transition-colors duration-200"
                >
                  {label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <div class="mt-12 pt-8 border-t border-gray-200">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <p class="text-gray-600 text-sm">
          {currentYear} Nature & Transition. Tous droits réservés.
        </p>
        <div class="flex space-x-6">
          <a
            href="https://twitter.com/naturetransition"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-600 hover:text-primary-dark"
            aria-label="Suivez-nous sur Twitter"
          >
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"/>
            </svg>
          </a>
          <a
            href="https://linkedin.com/company/naturetransition"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-600 hover:text-primary-dark"
            aria-label="Suivez-nous sur LinkedIn"
          >
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
