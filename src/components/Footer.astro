const links = [
  { name: 'Accueil', href: '/' },
  { name: 'À propos', href: '/a-propos' },
  { name: 'Articles', href: '/articles' },
  { name: 'Contact', href: '/contact' },
];
---

<footer class="bg-white border-t border-gray-200">
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <nav class="flex flex-wrap justify-center space-x-6 md:space-x-12 mb-8" aria-label="Footer">
      {links.map((link) => (
        <a href={link.href} class="text-gray-600 hover:text-green-600 transition-colors">
          {link.name}
        </a>
      ))}
    </nav>

    <div class="flex justify-center space-x-6 mb-8">
      {socialLinks.map((link) => (
        <a
          href={link.url}
          class="text-gray-500 hover:text-gray-900 transition-colors"
          target="_blank"
          rel="noopener noreferrer"
          aria-label={`Suivez-moi sur ${link.name}`}
        >
          <Fragment set:html={link.icon} />
        </a>
      ))}
    </div>

    <p class="text-center text-gray-500 text-sm">
      {currentYear} Nature Transition. Tous droits réservés.
    </p>
  </div>
</footer>
