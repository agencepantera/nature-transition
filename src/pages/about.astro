---
import Layout from '../layouts/Layout.astro';
import { authorPersona } from '../data/persona';
---

<Layout title="À propos - Nature & Énergie">
  <div class="bg-gradient-to-b from-green-50 to-white min-h-screen">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-24">
      <div class="text-center mb-16">
        <h1 class="text-4xl sm:text-5xl font-serif font-bold text-gray-900 mb-4">
          À propos de <span class="text-green-700">Nature & Énergie</span>
        </h1>
        <p class="text-xl text-gray-600">
          Un regard local sur les enjeux environnementaux et les solutions durables
        </p>
      </div>

      <!-- Author Profile -->
      <div class="bg-white rounded-2xl shadow-sm p-8 mb-12">
        <div class="flex flex-col md:flex-row items-center md:items-start gap-8">
          <div class="w-32 h-32 rounded-full overflow-hidden bg-green-100 flex-shrink-0">
            <img
              src="/images/profile.jpg"
              alt={authorPersona.name}
              class="w-full h-full object-cover"
            />
          </div>
          <div>
            <h2 class="text-2xl font-serif font-bold text-gray-900 mb-2">
              {authorPersona.name}
            </h2>
            <p class="text-green-700 font-medium mb-4">{authorPersona.occupation}</p>
            <p class="text-gray-600 leading-relaxed mb-6">
              {authorPersona.bio}
            </p>
            <div class="flex gap-4">
              <a
                href={`https://twitter.com/${authorPersona.socialMedia.twitter}`}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-500 hover:text-green-700 transition-colors"
              >
                <span class="sr-only">Twitter</span>
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"></path>
                </svg>
              </a>
              <a
                href={`https://linkedin.com/in/${authorPersona.socialMedia.linkedin}`}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-500 hover:text-green-700 transition-colors"
              >
                <span class="sr-only">LinkedIn</span>
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Mission & Values -->
      <div class="grid md:grid-cols-2 gap-8 mb-12">
        <div class="bg-white rounded-xl shadow-sm p-8">
          <h3 class="text-xl font-serif font-bold text-gray-900 mb-4">Mission</h3>
          <ul class="space-y-3">
            {authorPersona.goals.map(goal => (
              <li class="flex items-start">
                <svg class="w-5 h-5 text-green-500 mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-gray-600">{goal}</span>
              </li>
            ))}
          </ul>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-8">
          <h3 class="text-xl font-serif font-bold text-gray-900 mb-4">Motivations</h3>
          <ul class="space-y-3">
            {authorPersona.motivations.map(motivation => (
              <li class="flex items-start">
                <svg class="w-5 h-5 text-green-500 mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8 8-4-4"></path>
                </svg>
                <span class="text-gray-600">{motivation}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>

      <!-- Values -->
      <div class="bg-white rounded-xl shadow-sm p-8">
        <h3 class="text-xl font-serif font-bold text-gray-900 mb-4">Valeurs & Engagements</h3>
        <ul class="space-y-3">
          {authorPersona.brandValues.map(value => (
            <li class="flex items-start">
              <svg class="w-5 h-5 text-green-500 mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="text-gray-600">{value}</span>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</Layout>
